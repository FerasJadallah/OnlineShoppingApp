@model List<OnlineShoppingApp.Models.CartItem>
@using OnlineShoppingApp.Services

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h1 class="display-4 fw-bold mb-5">
        <i class="bi bi-cart-check text-primary"></i> Your Cart
    </h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-pill border-0 shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="display-1 text-muted mb-4">
                <i class="bi bi-cart-x"></i>
            </div>
            <h2 class="fw-light mb-4">Your cart is feeling lonely</h2>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5">
                <i class="bi bi-shop"></i> Start Shopping
            </a>
        </div>
    }
    else
    {
        <div class="row g-5">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        @foreach (var item in Model)
                        {
                            <div class="row align-items-center gy-3 py-3 border-bottom">
                                <div class="col-12 col-md-5">
                                    <h5 class="fw-bold mb-1">@item.ProductName</h5>
                                    <span class="text-muted">@String.Format("{0:C0}", item.UnitPrice) each</span>
                                </div>
                                <div class="col-12 col-md-5">
                                    <form asp-controller="Cart" asp-action="UpdateQuantity" method="post" class="cart-update-form" data-remove-url="@Url.Action("RemoveFromCart", "Cart")">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <div class="d-flex flex-wrap align-items-center gap-2">
                                            <button type="button" class="btn btn-outline-primary rounded-pill px-3 py-1 quantity-btn" data-delta="-1" aria-label="Decrease quantity">
                                                <i class="bi bi-dash-lg fw-bold"></i>
                                            </button>
                                            
                                            <input type="number" name="quantity" value="@item.Quantity" min="1" 
                                                   class="form-control text-center border-0 bg-light fw-bold quantity-input" 
                                                   style="width: 60px;" aria-label="Quantity" />
                                            
                                            <button type="button" class="btn btn-outline-primary rounded-pill px-3 py-1 quantity-btn" data-delta="1" aria-label="Increase quantity">
                                                <i class="bi bi-plus-lg fw-bold"></i>
                                            </button>
                                            
                                            <span class="fw-bold ms-2 fs-6 fs-md-5">@String.Format("{0:C0}", item.FinalPrice)</span>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-12 col-md-2 text-end">
                                    <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-lg bg-primary text-white">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-4">Order Summary</h4>
                        
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal</span>
                            <span class="fw-bold">@String.Format("{0:C0}", ViewBag.Subtotal)</span>
                        </div>
                        
                        @if (ViewBag.Discount > 0)
                        {
                            <div class="d-flex justify-content-between mb-3 text-warning">
                                <span><i class="bi bi-tags"></i> Discount (@(DiscountPolicy.Percent * 100)%)</span>
                                <span class="fw-bold">-@String.Format("{0:C0}", ViewBag.Discount)</span>
                            </div>
                        }
                        
                        <hr class="bg-white opacity-25">
                        
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fs-5">Total</span>
                            <span class="fs-3 fw-bold">@String.Format("{0:C0}", ViewBag.Total)</span>
                        </div>
                        
                        <form asp-controller="Cart" asp-action="ClearCart" method="post">
                            <button type="submit" class="btn btn-outline-light w-100 rounded-pill mb-3">
                                <i class="bi bi-cart-x"></i> Clear Cart
                            </button>
                        </form>
                        
                        <a asp-controller="Products" asp-action="Index" class="btn btn-light w-100 rounded-pill text-primary fw-bold">
                            <i class="bi bi-arrow-left"></i> Continue Shopping
                        </a>
                    </div>
                </div>
                
                @if (ViewBag.Discount == 0 && ViewBag.Subtotal < DiscountPolicy.Threshold)
                {
                    <div class="card border-0 shadow-sm mt-4 bg-light">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-info-circle-fill text-primary fs-4 me-3"></i>
                                <div>
                                    <small class="text-muted">Add @String.Format("{0:C0}", DiscountPolicy.Threshold - ViewBag.Subtotal) more to get 10% discount!</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    .quantity-input::-webkit-outer-spin-button,
    .quantity-input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    .quantity-input {
        -moz-appearance: textfield;
    }
.quantity-btn {
    width: 34px;
    height: 34px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}
@@media (max-width: 576px) {
    .quantity-input {
        width: 70px !important;
    }
    .cart-update-form .fw-bold.fs-md-5 {
        font-size: 1.1rem;
    }
}
</style>

@section Scripts {
    <script>
        (() => {
            const forms = document.querySelectorAll('.cart-update-form');

            const submitWithScroll = (form) => {
                sessionStorage.setItem('cartScroll', window.scrollY.toString());
                form.submit();
            };

            forms.forEach(form => {
                const input = form.querySelector('.quantity-input');
                const buttons = form.querySelectorAll('.quantity-btn');

                const clamp = (val) => Math.max(1, isNaN(val) ? 1 : val);

                buttons.forEach(btn => {
                    btn.addEventListener('click', () => {
                        const delta = Number(btn.dataset.delta);
                        const current = Number(input.value) || 1;
                        const next = current + delta;

                        // If user hits "-" while at 1, remove item
                        if (delta < 0 && current <= 1) {
                            form.action = form.dataset.removeUrl;
                            submitWithScroll(form);
                            return;
                        }

                        input.value = clamp(next);
                        submitWithScroll(form);
                    });
                });

                input.addEventListener('change', () => {
                    input.value = clamp(Number(input.value));
                    submitWithScroll(form);
                });

                input.addEventListener('keyup', (e) => {
                    if (e.key === 'Enter') {
                        input.value = clamp(Number(input.value));
                        submitWithScroll(form);
                    }
                });
            });

            const saved = sessionStorage.getItem('cartScroll');
            if (saved) {
                window.scrollTo({ top: Number(saved), behavior: 'instant' });
                sessionStorage.removeItem('cartScroll');
            }
        })();
    </script>
}
