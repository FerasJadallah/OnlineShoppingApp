@model IEnumerable<OnlineShoppingApp.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-5">
    <h1 class="display-4 fw-bold mb-5 text-center">
        <i class="bi bi-shop text-primary"></i> Our Products
    </h1>
    
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-lg hover-scale">
                    <div class="position-relative">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;">
                        @if (product.Discount > 0)
                        {
                            <span class="position-absolute top-0 end-0 bg-danger text-white px-3 py-2 m-3 rounded-pill">
                                <i class="bi bi-tag"></i> @product.Discount% OFF
                            </span>
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold fs-4">@product.Name</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div>
                                <span class="h3 fw-bold text-primary">@Html.DisplayFor(_ => product.Price)</span>
                                @if (product.Discount > 0)
                                {
                                    <span class="text-muted text-decoration-line-through ms-2">
                                        @String.Format("{0:C0}", product.Price * (100 + product.Discount) / 100)
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 pb-4 pt-0">
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-grid">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .hover-scale:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 2rem rgba(0,0,0,0.15) !important;
    }
</style>
