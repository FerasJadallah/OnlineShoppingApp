@model IEnumerable<Product>
@using OnlineShoppingApp.Services
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="hero-visual text-white py-5">
        <div class="container py-5">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-lg-8">
                    <h1 class="display-3 fw-bold mb-4">
                        <i class="bi bi-bag-heart"></i> ShopSmart
                    </h1>
                    <p class="lead mb-4">
                        Discover amazing products at unbeatable prices.
                        Get <span class="fw-bold text-warning">10% off</span> on orders above @String.Format("{0:C0}", DiscountPolicy.Threshold)!
                    </p>
                    <div class="d-flex gap-3 justify-content-center">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg rounded-pill px-5">
                            <i class="bi bi-grid"></i> Shop Now
                        </a>
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-light btn-lg rounded-pill px-5">
                            <i class="bi bi-cart"></i> View Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container py-5">
        <h2 class="text-center fw-bold mb-5">Why Shop With Us?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="display-4 text-primary mb-3">
                        <i class="bi bi-truck"></i>
                    </div>
                    <h4>Fast Delivery</h4>
                    <p class="text-muted">Get your products delivered within 2-3 business days.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="display-4 text-primary mb-3">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h4>Secure Payments</h4>
                    <p class="text-muted">100% secure transactions with encrypted checkout.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="display-4 text-primary mb-3">
                        <i class="bi bi-arrow-repeat"></i>
                    </div>
                    <h4>Easy Returns</h4>
                    <p class="text-muted">30-day return policy on all products.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Products Preview -->
    <div class="bg-light py-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">Featured Products</h2>
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary rounded-pill">
                    View All <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm hover-scale">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-muted">@product.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 mb-0">@String.Format("{0:C0}", product.Price)</span>
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn btn-sm btn-primary rounded-pill">
                                            <i class="bi bi-cart-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Discount Banner -->
    <div class="container py-5">
        <div class="card bg-primary text-white border-0">
            <div class="card-body p-5">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <h3 class="fw-bold mb-2">ðŸŽ‰ Special Offer!</h3>
                        <p class="lead mb-0">Get @(DiscountPolicy.Percent * 100)% instant discount on all orders above @String.Format("{0:C0}", DiscountPolicy.Threshold). Shop now!</p>
                    </div>
                    <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg rounded-pill px-5">
                            Shop Now <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
    }
    .hero-visual {
        background: linear-gradient(135deg, rgba(13,110,253,0.9) 0%, rgba(10,88,202,0.92) 100%), url('/images/home/home.png') center/cover no-repeat;
    }
    .hover-scale {
        transition: transform 0.3s ease;
    }
    .hover-scale:hover {
        transform: translateY(-5px);
    }
</style>
